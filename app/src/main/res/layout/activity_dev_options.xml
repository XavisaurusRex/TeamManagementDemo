<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.devoptions.view.DevOptionsActivity">

    <ToggleButton
        android:id="@+id/tbEnvoirment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textOn="PRE"
        android:textOff="PRO"/>

    <Button
        android:id="@+id/btnFillDatabase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fill database with dummie content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/tbEnvoirment"/>

    <Button
        android:id="@+id/btnPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/btnFillDatabase"/>

    <ScrollView
        android:id="@+id/scvLogs"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/tvLogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1"/>
    </ScrollView>
</android.support.constraint.ConstraintLayout>