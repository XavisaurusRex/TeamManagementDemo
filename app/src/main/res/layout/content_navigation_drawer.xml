<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navigationDrawerBackground"
    android:padding="30dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llSelectedProfile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/tvMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside"
        app:layout_constraintVertical_weight="20">

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:backgroundTint="@android:color/black"
            android:contentDescription="hola"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_menu_profiledata"
            app:layout_constraintBottom_toTopOf="@id/tvProfileDesc"
            app:layout_constraintEnd_toEndOf="@id/tvProfileDesc"
            app:layout_constraintHorizontal_weight="0.2"
            app:layout_constraintStart_toStartOf="@id/tvProfileDesc"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="0.8" />

        <TextView
            android:id="@+id/tvProfileDesc"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="xavixavi97@gmail.com"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivProfile"
            app:layout_constraintVertical_weight="0.2" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/btnTeamInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Team"
        app:layout_constraintTop_toBottomOf="@id/llSelectedProfile" />

    <Button
        android:id="@+id/btnSurveyActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Survey Activity"
        app:layout_constraintTop_toBottomOf="@id/btnTeamInfo" />

    <Button
        android:id="@+id/btnDevOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developer Options"
        app:layout_constraintTop_toBottomOf="@id/btnSurveyActivity" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="HOLA"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llSelectedProfile"
        app:layout_constraintVertical_weight="70" />
</androidx.constraintlayout.widget.ConstraintLayout>