<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.activities.signuptrainer.view.SignupTrainerActivity"
    android:padding="10dp">

    <EditText
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:maxLength="25"
        android:inputType="text"
        android:layout_margin="@dimen/buttons_margin"/>

    <EditText
        android:id="@+id/tvSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Surname"
        android:inputType="text"
        android:maxLength="25"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        android:layout_margin="@dimen/buttons_margin" />

    <EditText
        android:id="@+id/tvPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:inputType="phone"
        android:maxLength="25"
        app:layout_constraintTop_toBottomOf="@id/tvSurname"
        android:layout_margin="@dimen/buttons_margin"/>
    <ImageButton
        android:id="@+id/ibUploadPicture"
        android:src="@drawable/ic_edit"
        android:layout_height="75dp"
        android:layout_width="75dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="@id/ivPicture"
        app:layout_constraintEnd_toEndOf="@id/tvName"
        app:layout_constraintStart_toEndOf="@id/ivPicture" />
    <ImageView
        android:id="@+id/ivPicture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_menu_profiledata"
        android:scaleType="fitCenter"
        android:layout_marginRight="@dimen/picture_margin_right"
        app:layout_constraintBottom_toTopOf="@id/btnNext"
        app:layout_constraintEnd_toStartOf="@id/ibUploadPicture"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneNumber"/>

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/button_cancel"
        app:layout_constraintEnd_toStartOf="@id/btnNext"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/image_margin"/>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/button_next"
        app:layout_constraintEnd_toEndOf="@id/tvName"
        app:layout_constraintStart_toEndOf="@id/btnCancel"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>