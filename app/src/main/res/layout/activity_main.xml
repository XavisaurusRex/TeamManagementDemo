<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <View
        android:id="@+id/vLeftTop"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <View
        android:id="@+id/vRightTop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/vRightBottom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/vLeftBottom"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/v05"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="400dp"
        android:layout_marginRight="100dp" />

    <View
        android:id="@+id/v06"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="300dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/v07"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="180dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Busca clicks,.. hay 7 items"
        android:textAppearance="@android:style/TextAppearance.Material.Body2"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:layout_margin="20dp" />


    <ImageView
        android:id="@+id/ivSolaireHavel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/solaire_havel"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvWinMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="YOU WIN PAKI!"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.Material.Body2"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="50sp"
        android:layout_marginTop="50dp"
        android:visibility="gone" />

</android.support.constraint.ConstraintLayout>
