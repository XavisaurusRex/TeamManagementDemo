<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_rowWeight="100"
    android:layout_columnWeight="100"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivPicture"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_menu_profiledata"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxHeight="150dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:maxLength="25"
        android:inputType="text"
        android:layout_margin="@dimen/buttons_margin"
        app:layout_constraintTop_toBottomOf="@id/ivPicture"/>

    <EditText
        android:id="@+id/tvSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Surname"
        android:inputType="text"
        android:maxLength="25"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        android:layout_margin="@dimen/buttons_margin" />

    <EditText
        android:id="@+id/tvPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:inputType="phone"
        android:maxLength="25"
        app:layout_constraintTop_toBottomOf="@id/tvSurname"
        android:layout_margin="@dimen/buttons_margin"/>

    <Spinner
        android:id="@+id/spnTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_team_view"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneNumber" />
</androidx.constraintlayout.widget.ConstraintLayout>