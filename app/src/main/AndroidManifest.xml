<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cat.devsofthecoast.teammanagementdemo">

    <application
        android:name=".TMDApp"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/TMDTheme"
        android:versionName="@string/app_version">
        <activity
            android:name=".feature.activities.login.view.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".feature.fragments.teamslist.view.TeamsListActivity" />
        <activity
            android:name=".feature.activities.headactivity.view.HeadActivity"
            android:label="@string/title_activity_week_preview"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.teammanagementdemo.com"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity android:name=".feature.activities.signuptrainer.view.SignupTrainerActivity" />
        <activity android:name=".feature.activities.selectteam.view.SelectTeamActivity"></activity>
    </application>

</manifest>